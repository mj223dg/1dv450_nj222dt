<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@user, @api] do |f| %>
        <%= f.label:name, "Name of the App(25 chars)"%>
        <%= f.text_field :name, :maxlength => 25, :size => 25, class: "form-control" %>
        <%= f.submit "Register App", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>