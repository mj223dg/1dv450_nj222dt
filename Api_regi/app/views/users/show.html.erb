<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.admin? %>
        <div><h1>Admin Login</h1></div>
      <% end %>
      <div>
        <h2>
        <%= @user.name %>
        </h2>
        <h2>
        <%= @user.email %>
        </h2>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
</div>
<div class="row">
  <strong>Applications</strong>
  <% if @apis.any? %>
    <% @apis.each do |api| %>
      <ul style="list-style-type:none">
        <li>
          <%= api.name %>
          <%= api.api_key %>
          <%= api.user.name  %>
          <%= link_to "Remove App", [api.user, api],
              method: :delete,
              data: { confirm: "If you confirm this the app will be removed"} %>
        </li>                  
      </ul>
    <% end %>
  <% end %>
  <div class="col-mod-4 text-center">
    <%= link_to "Register App", create_path(@user), class: "btn btn-primary btn-lg" %>
  </div>
</div>